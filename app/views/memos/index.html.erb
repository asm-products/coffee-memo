<h1>Listing memos</h1>

<table>
  <thead>
    <tr>
      <th>Coffee shop</th>
      <th>Kind of coffee</th>
      <th>Origin</th>
      <th>Taste</th>
      <th>Aroma</th>
      <th>Mood</th>
      <th>Barrista</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memos.each do |memo| %>
      <tr>
        <td><%= memo.coffee_shop %></td>
        <td><%= memo.kind_of_coffee %></td>
        <td><%= memo.origin %></td>
        <td><%= memo.taste %></td>
        <td><%= memo.aroma %></td>
        <td><%= memo.mood %></td>
        <td><%= memo.barrista %></td>
        <td><%= link_to 'Show', memo %></td>
        <td><%= link_to 'Edit', edit_memo_path(memo) %></td>
        <td><%= link_to 'Destroy', memo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Memo', new_memo_path %>
